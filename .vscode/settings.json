{
  "go.buildOnSave": "workspace",
  "go.formatTool": "goformat", 
  "go.formatFlags": [
    "--style=indent=4 enter=1 inlineblocks=keep"
  ],
  "[go]": {
    "editor.insertSpaces": true,
    "editor.formatOnSave": true
  },
  "go.toolsEnvVars": {
    "PWD":"" // prevent confusion from symlinked directories
  },
}
